<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.adminchat.ui.notifications.NotificationsFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        android:padding="15dp"
        android:id="@+id/top_bar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <TextView
            android:id="@+id/gym_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="20dp"
            android:text="마이페이지"></TextView>
        <TextView
            android:id="@+id/edit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수정"
            android:layout_alignParentRight="true"></TextView>
        <TextView
            android:id="@+id/complete_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="완료"
            android:visibility="gone"
            android:layout_alignParentRight="true"></TextView>
    </RelativeLayout>
    <include
        android:id="@+id/my_profile"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        layout="@layout/item_profile"
        app:layout_constraintTop_toBottomOf="@+id/top_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        ></include>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="닉네임"
        android:id="@+id/nickname_tv"
        app:layout_constraintTop_toBottomOf="@+id/my_profile"
        ></TextView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="홍길동"
        android:enabled="false"
        android:id="@+id/nickname_ev"
        app:layout_constraintTop_toBottomOf="@+id/nickname_tv"
        ></EditText>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="오늘의 운동"
        android:id="@+id/today_workout_tv"
        app:layout_constraintTop_toBottomOf="@+id/nickname_ev"
        ></TextView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="이두"
        android:id="@+id/today_workout_ev"
        android:enabled="false"

        app:layout_constraintTop_toBottomOf="@+id/today_workout_tv"
        ></EditText>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그아웃"
        android:id="@+id/logout_btn"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/today_workout_ev"
        app:layout_constraintEnd_toEndOf="parent"
        ></TextView>
</androidx.constraintlayout.widget.ConstraintLayout>